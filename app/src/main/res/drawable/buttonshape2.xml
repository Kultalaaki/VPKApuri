        android:gradientRadius="200"
        android:centerX="35%"
        android:centerY="50%"
        android:centerColor="#000000"
        android:startColor="#005599"
        android:endColor="#005599"
        android:type="radial"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
