<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1a1a1a"
    tools:context=".aktiivinenHaly">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:textIsSelectable="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/edittext_bottomline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_above="@+id/angry_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />
    <Button
        android:id="@+id/angry_btn"
        android:text="SOITA LÄHTÖILMOITUS"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        android:textSize="20sp"
        android:background="@drawable/buttonshape"
        android:alpha="0.7"
        android:drawableLeft="@drawable/ic_phone_white_36dp"
        android:paddingLeft="20dip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="-5dp"
        android:layout_above="@+id/view5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawablePadding="10dip"
        android:gravity="center_vertical"
        android:textAlignment="gravity"/>
    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_above="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view5"
        android:layout_marginBottom="10dp"/>

    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_above="@+id/second"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />
    <Button
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:backgroundTint="#000000"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:alpha="0.7"
        android:textSize="20sp"
        android:layout_height="60dp"
        android:onClick="settingsActivity"
        android:text="@string/second"
        android:layout_above="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_location_city_white_36dp"
        android:paddingLeft="20dip"
        android:drawablePadding="10dip"
        android:gravity="center_vertical"
        android:textAlignment="gravity"/>
    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view3" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiljennä hälytys"
        android:id="@+id/hiljenna"
        android:layout_above="@+id/view2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="20dp"
        android:textColor="#802000" />

</RelativeLayout>
