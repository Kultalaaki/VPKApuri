            android:id="@+id/tarkisto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/ohjeetArkisto"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/buttonohjeet"
            android:drawableEnd="@drawable/ic_format_line_spacing_white_24dp"
            android:drawableRight="@drawable/ic_format_line_spacing_white_24dp"
            android:text="@string/whatsapp" />
