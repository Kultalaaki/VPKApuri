    <ListView
        android:id="@+id/listViewHalyt"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stackFromBottom="false"
        android:transcriptMode="normal">
    </ListView>

</LinearLayout>



