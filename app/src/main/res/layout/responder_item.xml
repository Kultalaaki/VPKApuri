<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/primaryDarkColor"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_attribute_vacancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7511"
            android:textColor="@color/secondaryColor"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/text_view_name"
            android:text="Matti Meikäläinen"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text_view_attribute_vacancy"/>

        <TextView
            android:id="@+id/text_view_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alle 5 min"
            android:maxLines="1"
            android:layout_below="@id/text_view_name"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/text_view_attribute_driver_license"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="C"
            android:textColor="@color/secondaryDarkColor"/>

        <TextView
            android:id="@+id/text_view_attribute_smoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="S"
            android:textColor="@color/greenCard"
            android:layout_toRightOf="@id/text_view_attribute_driver_license"
            android:layout_toEndOf="@id/text_view_attribute_driver_license"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"/>

        <TextView
            android:id="@+id/text_view_attribute_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:layout_toRightOf="@id/text_view_attribute_smoke"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:layout_toEndOf="@id/text_view_attribute_smoke" />

        <TextView
            android:id="@+id/text_view_attribute_chemical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K"
            android:textColor="@color/yellowCard"
            android:layout_toRightOf="@id/text_view_attribute_leader"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:layout_toEndOf="@id/text_view_attribute_leader" />

        <TextView
            android:id="@+id/text_view_attribute_optional1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pintapelastaja"
            android:ellipsize="end"
            android:layout_below="@id/text_view_attribute_driver_license" />

        <TextView
            android:id="@+id/text_view_attribute_optional2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opt 2"
            android:ellipsize="end"
            android:layout_below="@id/text_view_attribute_driver_license"
            android:layout_toRightOf="@id/text_view_attribute_optional1"
            android:paddingLeft="8dp"
            android:layout_toEndOf="@id/text_view_attribute_optional1"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/text_view_attribute_optional3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_attribute_optional4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_attribute_optional5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>