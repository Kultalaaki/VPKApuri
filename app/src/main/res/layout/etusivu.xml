<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context=".Etusivu">

    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_above="@+id/halytysSivu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />
    <Button
        android:id="@+id/halytysSivu"
        android:text="@string/action_halytys"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:textSize="20sp"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="-5dp"
        android:layout_above="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_whatshot_white_36dp"
        android:drawablePadding="0dip"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:paddingLeft="10dip"/>
    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_above="@+id/view5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view"
        android:layout_marginBottom="10dp"/>

    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_above="@+id/arkisto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view5" />
    <Button
        android:id="@+id/arkisto"
        android:text="@string/action_arkisto"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:textSize="20sp"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="-5dp"
        android:layout_above="@+id/view4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_dehaze_white_36dp"
        android:drawablePadding="0dip"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:paddingLeft="10dip"/>
    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_above="@+id/view6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/view4" />

    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_above="@+id/ohjeita"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view6" />
    <Button
        android:id="@+id/ohjeita"
        android:layout_width="match_parent"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:alpha="0.7"
        android:textSize="20sp"
        android:layout_height="60dp"
        android:text="@string/action_ohjeet"
        android:layout_above="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_error_outline_white_36dp"
        android:drawablePadding="0dip"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:paddingLeft="10dip"/>
    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:layout_above="@+id/view7"
        android:background="#802000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view3"
        android:layout_marginBottom="10dp"/>

    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_above="@+id/asetukset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view7" />
    <Button
        android:id="@+id/asetukset"
        android:layout_width="match_parent"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:alpha="0.7"
        android:textSize="20sp"
        android:layout_height="60dp"
        android:text="@string/action_asetukset"
        android:layout_above="@+id/view8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_settings_applications_white_36dp"
        android:drawablePadding="0dip"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:paddingLeft="10dip"/>
    <View android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:paddingTop="0dp"
        android:background="#802000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view8" />

</RelativeLayout>
